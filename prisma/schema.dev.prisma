generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model AIDailyItem {
  id        String   @id
  dateISO   String
  genre     String
  mood      String
  title     String
  summary   String
  bullets   Json
  sources   Json
  score     Float
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@index([score])
  @@index([dateISO])
}

model BetaSignup {
  id                String    @id
  email             String    @unique
  verified          Boolean   @default(false)
  verificationToken String?   @unique
  verifiedAt        DateTime?
  createdAt         DateTime  @default(now())

  @@index([verificationToken])
  @@index([email])
}

model Post {
  id         String   @id
  threadId   String
  content    String
  authorName String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime
  Thread     Thread   @relation(fields: [threadId], references: [id], onDelete: Cascade)

  @@index([threadId])
}

model Room {
  id          String   @id
  slug        String   @unique
  title       String
  description String   @default("")
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  Thread      Thread[]

  @@index([slug])
}

model Thread {
  id         String   @id
  roomId     String
  title      String
  content    String   @default("")
  authorName String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime
  Post       Post[]
  Room       Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@index([roomId])
}
