generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AIDailyItem {
  id        String   @id @default(cuid())
  dateISO   String
  genre     String
  mood      String
  title     String
  summary   String
  bullets   Json
  sources   Json
  score     Float
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@index([dateISO])
  @@index([score])
}

model ChatMessage {
  id         String   @id @default(cuid())
  threadId   String
  authorId   String?
  authorName String
  content    String
  createdAt  DateTime @default(now())
  hidden     Boolean  @default(false)
  thread     Thread   @relation(fields: [threadId], references: [id], onDelete: Cascade)

  @@index([threadId, createdAt])
}

model Post {
  id         String   @id @default(cuid())
  threadId   String
  content    String
  authorName String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime
  pinned     Boolean  @default(false)
  thread     Thread   @relation(fields: [threadId], references: [id], onDelete: Cascade)

  @@index([threadId])
}

model Room {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  description String   @default("")
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  threads     Thread[]

  @@index([slug])
}

model Thread {
  id          String        @id @default(cuid())
  roomId      String
  title       String
  content     String        @default("")
  authorName  String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  chatMessages ChatMessage[]
  posts        Post[]
  room         Room          @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@index([roomId])
}

/// RSS Feed health monitoring
model FeedHealth {
  id            String   @id @default(cuid())
  feedUrl       String   @unique
  feedLabel     String
  status        String   // "healthy" | "degraded" | "broken" | "unknown"
  lastChecked   DateTime @default(now())
  lastSuccess   DateTime?
  consecutiveFailures Int @default(0)
  errorMessage  String?
  responseTime  Int?     // milliseconds
  itemCount     Int?     // number of items in last successful fetch
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([status])
  @@index([lastChecked])
}

/// Beta signup waitlist
model BetaSignup {
  id                String    @id @default(cuid())
  email             String    @unique
  verified          Boolean   @default(false)
  verificationToken String?   @unique
  verifiedAt        DateTime?
  createdAt         DateTime  @default(now())

  @@index([email])
  @@index([verificationToken])
}
